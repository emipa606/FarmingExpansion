<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- JecsTobaccoAndCigarettes -->
  <Operation Class="PatchOperationConditional">
    <success>Always</success>
    <xpath>/Defs/ThingDef[defName="Jecs_TobaccoLeaves"]</xpath>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/RecipeDef[defName="FE_MakePesticide"]/ingredients/li/filter/thingDefs</xpath>
          <value>
            <li>Jecs_TobaccoLeaves</li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/RecipeDef[defName="FE_MakePesticide"]/fixedIngredientFilter/thingDefs</xpath>
          <value>
            <li>Jecs_TobaccoLeaves</li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
