<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- Survivalist Additions -->
  <Operation Class="PatchOperationConditional">
    <success>Always</success>
    <xpath>/Defs/ThingDef[defName="SRV_Vinegar"]</xpath>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/RecipeDef[defName="FE_MakeHerbicide"]/ingredients/li/filter/thingDefs</xpath>
          <value>
            <li>SRV_Vinegar</li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/RecipeDef[defName="FE_MakeHerbicide"]/fixedIngredientFilter/thingDefs</xpath>
          <value>
            <li>SRV_Vinegar</li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
